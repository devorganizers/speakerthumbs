extends layout

block content
    div.container-fluid
        a(class='btn btn-primary btn-create' href='/talk-create')
            i.fa.fa-plus-circle
            |  Criar Palestra
        div.list-group
            each talk in talks
                span.list-group-item
                    a(class='btn' href='/talk-detail/'+talk._id)= talk.name
                    span
                        a(class='btn' href='/talk-edit/'+talk._id)
                            i.fa.fa-pencil
                        a(class='btn' href='#')
                            i.fa.fa-trash
