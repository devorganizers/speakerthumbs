doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')

        title SpeakerThumbs

        link(rel='stylesheet', href='/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/bootstrap-datetimepicker.min.css')
        link(rel='stylesheet', href='/css/style.css')
    body
        div.container
            nav(class='navbar navbar-default', role='navigation')
                div.container-fluid
                    div.navbar-header
                        button(type='button', class='navbar-toggle collapsed', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a(class='navbar-brand', href='/') SpeakerThumbs
                    div(id='navbar', class='navbar-collapse collapse')
                        ul.nav.navbar-nav
                            li(class=isEventActive)
                                a(href='/events') Events
                        if user
                            div.nav.navbar-right
                                a(href='/signout', class='btn btn-default navbar-btn') Logout
                                p.navbar-text= user.name
                        else
                            ul.nav.navbar-nav.navbar-right
                                li
                                    a(href="/auth/facebook") Login via Facebook
                                li
                                    a(href="/auth/twitter") Login via Twitter
                                li
                                    a(href="/auth/github") Login via Github
                                li
                                    a(href="/auth/google") Login via Google
                                li
                                    a(href='/signup') Sign up!
                            form(class='navbar-form navbar-right', role='login', action='/login', method='POST')
                                input(type="hidden", name="_csrf", value="#{csrfToken}")
                                div.form-group
                                    input(type='text', name='email', class='form-control', placeholder='email')
                                    input(type='password', name='password', class='form-control', placeholder='password')
                                button(type='submit', class='btn btn-default') Login

            if message
                p.text-danger= message

            block content

            script(src='/js/jquery.min.js')
            script(src='/js/bootstrap.min.js')
            script(src='/js/moment-with-locales.min.js')
            script(src='/js/bootstrap-datetimepicker.min.js')

            block script
