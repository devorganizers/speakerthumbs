extends layout

block content
    div.container-fluid
        div.form-horizontal
            div.form-group
                label.detail-label.col-sm-2 Nome
                p.col-sm-10= event.name
            div.form-group
                label.detail-label.col-sm-2 Data de início
                p.col-sm-10= event.startDate
            div.form-group
                label.detail-label.col-sm-2 Data de fim
                p.col-sm-10= event.endDate
            div.form-group
                label.detail-label.col-sm-2 Lugar
                p.col-sm-10= event.location
            div.form-group
                label.detail-label.col-sm-2 Descriçao
                p.justified.col-sm-10= event.description
