extends layout

block content
    div.container-fluid
        form(class='form-horizontal', role='form', action='/event-update', method='POST')
            div.form-group
                label(for='event-name', class='control-label col-sm-2') Name
                div.col-sm-10
                    input(type='text', class='form-control', id='event-name', value=event.name, disabled)
            input(type='hidden', value=event.name, name='eventName')
            div.form-group
                label(for='event-website', class='control-label col-sm-2') Website
                div.col-sm-10
                    input(type='text', class='form-control', id='event-website', value=event.website, name='eventWebsite')
            div.form-group
                label(for='event-startdate', class='control-label col-sm-2') Start date
                div.col-sm-4
                    div(class='input-group date', id='event-startdate')
                        input(type='text', class='form-control', value=event.startDate, name='eventStartDate')
                        span.input-group-addon
                            span.glyphicon.glyphicon-calendar
            div.form-group
                label(for='event-enddate', class='control-label col-sm-2') End date
                div.col-sm-4
                    div(class='input-group date', id='event-enddate')
                        input(type='text', class='form-control', value=event.endDate, name='eventEndDate')
                        span.input-group-addon
                            span.glyphicon.glyphicon-calendar
            div.form-group
                label(for='event-location', class='control-label col-sm-2') Location
                div.col-sm-10
                    input(type='text', class='form-control', id='event-location', value=event.location, name='eventLocation')
            div.form-group
                label(for='event-description', class='control-label col-sm-2') Description
                div.col-sm-10
                    textarea(class='form-control', rows='5', id='event-description', name='eventDescription')= event.description
            input(type='hidden', value=event.id, name='eventId')
            button(type='submit', class='btn btn-primary pull-right') Update event!

block script
    script(type='text/javascript').
        $(function() {
            $('#event-startdate').datetimepicker();
            $('#event-enddate').datetimepicker();
        });
