extends layout

block content
    div.container-fluid
        form(class='form-horizontal', role='form', action='/signup', method='POST')
            div.form-group
                label(for='user-username', class='control-label col-sm-2') Nome de usuário
                div.col-sm-10
                    input(type='text', class='form-control', id='user-username', name='username', placeholder='Nome de usuário')
            div.form-group
                label(for='user-password', class='control-label col-sm-2') Senha
                div.col-sm-10
                    input(type='password', class='form-control', id='user-password', name='password', placeholder='Senha')
            button(type='submit', class='btn btn-primary pull-right') Criar usuário!
